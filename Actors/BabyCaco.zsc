    +RANDOMIZE;
    RenderStyle "Add";
    Alpha 1;
    SeeSound "caco/attack";
    DeathSound "caco/shotx";
    Decal "HImpScorch";
    States
    {
      Spawn:
        BCAB AB 4 BRIGHT;
        Loop;
      Death:
        BCAB CDE 6 BRIGHT;
        Stop;
    }
  }
}
