Class Grin : Actor
{
  Default
  {
    +FRIENDLY
    Species "Companion";
    DamageFactor "Companion", 0;
    Health 75;
    Radius 12;
    Height 38;
    Mass 100;
    Speed 12;
    PainChance 255;
    Monster;
    Species "Grin";
    SeeSound "imptaunt";
    PainSound "hihurt";
    DeathSound "hideath";
    ActiveSound "imptaunt";
    Obituary "%o was ambushed by a Grin";
    DropItem "Shotgun";
    +DONTHARMSPECIES
    +FLOORCLIP
    +NOBLOCKMONST
  }
  States
  {
    Spawn:
      TNT1 A 0 A_TakeInventory("Patience",2200);
      TNT1 A 0 A_TakeInventory("RunTiredInv",21);
      TNT1 A 0
      {
        bMISSILEEVENMORE = false;
        bMISSILEMORE = false;
        bFRIGHTENED = false;
      }
      HOIM AA 10 A_Look;
      Loop;
    See:
      TNT1 A 0 A_TakeInventory("GrinInv",3);
      TNT1 A 0 A_TakeInventory("Running",2);
      TNT1 A 0 A_TakeInventory("Patience",2200);
      TNT1 A 0 A_TakeInventory("RunTiredInv",21);
      TNT1 A 0
      {
        bMISSILEEVENMORE = false;
        bMISSILEMORE = false;
        bFRIGHTENED = false;
      }
      HOIM ABCD 3 A_Chase;
      TNT1 A 0 A_TakeInventory("GrinInv",21);
      Loop;
    Laugh:
      TNT1 A 0
      {
        //A_JumpIfCloser(300,"Missile");
        if(target && Distance3D(target) <= 300 && !(target is "PatrolPoint")){
          SetStateLabel("Missile");
        }
      }
      HOI2 ABC 6;
      TNT1 A 0 A_StartSound("HITAUNT");
      HOI2 DEFGHIJKLMNO 6;
      Goto Scared+11;
    PutMineAndRun:
      TNT1 A 0 A_JumpIfInventory("GrinInv",3,3);
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      TNT1 A 0 A_SpawnItemEx("Mine",0,0,3,0,0,Random(5,8));
      TNT1 A 0 A_GiveInventory("GrinInv",1);
      HOIM ABCD 1 A_Chase(null,null,CHF_NOPLAYACTIVE);
      Goto Scared+8;
    Scared:
      TNT1 A 0 A_GiveInventory("Running",1);
      TNT1 A 0 A_TakeInventory("RunTiredInv",5);
      TNT1 A 0 A_Jump(200,1);
      TNT1 A 0 A_StartSound("Grin/act",CHAN_VOICE);
      TNT1 A 0
      {
        bMISSILEEVENMORE = true;
        bMISSILEMORE = true;
        bFRIGHTENED = true;
      }
      TNT1 A 0 A_JumpIfTargetInLOS(1,360);
      Goto WhereHasItGone;
      TNT1 A 0 A_JumpIfInventory("GrinInv",3,3);
      TNT1 A 0
      {
        //A_JumpIfCloser(600,"PutMineAndRun");
        if(target && Distance3D(target) <= 600 && !(target is "PatrolPoint")){
          SetStateLabel("PutMineAndRun");
        }
      }
      HOIM ABCD 1 A_Chase(null,null,CHF_NOPLAYACTIVE);
      HOIM ABCD 1 A_Chase(null,null,CHF_NOPLAYACTIVE);
      TNT1 A 0 A_GiveInventory("RunTiredInv",1);
      TNT1 A 0 A_Jump(160,"1");
      TNT1 A 0
      {
        //A_JumpIfCloser(300,"Missile");
        if(target && Distance3D(target) <= 300 && !(target is "PatrolPoint")){
          SetStateLabel("Missile");
        }
      }
      TNT1 A 0 A_JumpIfInventory("RunTiredInv",11,1);
      Goto Scared+8;
    WhereHasItGone:
      TNT1 A 0
      {
        bMISSILEEVENMORE = false;
        bMISSILEMORE = false;
        bFRIGHTENED = false;
      }
      TNT1 A 0 A_JumpIfTargetInLOS("See",360);
      HOIM ABCD 3 A_Chase;
      TNT1 A 0 A_TakeInventory("GrinInv",3);
    Camping:
      TNT1 AA 0;
      TNT1 A 0 A_JumpIfInventory("Patience",450,"See");
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Chase(null,"MissileCamping2",CHF_DONTMOVE|CHF_NOPLAYACTIVE);
      TNT1 A 0 A_Giveinventory("Patience",1);
      Loop;
    Missile:
      TNT1 A 0 A_Jump(40,"Laugh");
      TNT1 A 0 A_TakeInventory("Patience",2200);
      TNT1 A 0
      {
        bMISSILEEVENMORE = false;
        bMISSILEMORE = false;
        bFRIGHTENED = false;
      }
      HOIM E 12 A_FaceTarget;
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      TNT1 A 0 Bright A_CustomBulletAttack (15, 8, 5, 2, "CompanionBulletPuff");
      TNT1 A 0 A_StartSound("shotguy/attack",0);
      HOIM F 5 Bright;
      HOIM E 5;
      TNT1 A 0 A_Jump(40,"See");
      Goto Scared;
    MissileCamping2:
      TNT1 A 0 A_TakeInventory("Patience",2200);
      TNT1 A 0 A_StartSound("shatgun/agarrar",0);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      HOIM E 1 A_Recoil(1);
      TNT1 A 0 A_FaceTarget;
      TNT1 A 0 A_Jump(60,"Laugh");
      TNT1 A 0 A_StartSound("shotguy/attack",0);
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      HOIM F 2 Bright A_CustomBulletAttack (15, 8, 5, 2, "CompanionBulletPuff");
      HOIM E 5;
      TNT1 A 0 A_Jump(60,"See");
      Goto Scared;
    Pain:
      TNT1 A 0 A_JumpIfInventory("Running",1,"PainNormal");
      HOIM G 3;
      HOIM G 6 A_Pain;
      TNT1 A 0 A_Jump(60,"See");
      Goto Scared;
    PainNormal:
      TNT1 A 0
      {
        bMISSILEEVENMORE = false;
        bMISSILEMORE = false;
        bFRIGHTENED = false;
      }
      TNT1 A 0 A_TakeInventory("Patience",800);
      HOIM G 3;
      HOIM G 6 A_Pain;
      Goto See;
    Death:
      HOIM H 5;
      HOIM I 5 A_Scream;
      HOIM J 5 A_NoBlocking;
      HOIM K 10;
      HOIM LM 5;
      HOIM N -1;
      Stop;
    XDeath:
      HOIM O 5;
      HOIM P 5 A_XScream;
      HOIM Q 5 A_NoBlocking;
      HOIM R 10;
      HOIM STUV 5;
      HOIM W -1;
      Stop;
      Raise:
      HOIM H 5;
      HOIM NMLKJI 5;
      Goto See;
  }
}

