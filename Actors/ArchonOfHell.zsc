{
  Default
  {
    Radius 8;
    Height 12;
    Speed 25;
    Damage 20;
    Scale 1.0;
    SeeSound "weapons/firbfi";
    DeathSound "weapons/hellex";
    PROJECTILE;
    Species "Companion";
    DamageType "Companion";
    +ThruGhost
  }

  States
  {
  Spawn:
    ARCB AAAABBBBCCCC 1 Bright A_SpawnItemEx("ArchonCometTrail");
    Loop;
  Death:
    ARCB J 0 Bright A_SetTranslucent(0.67,1);
    ARCB J 3 Bright;
    ARCB K 3 Bright A_Explode(128,128,XF_EXPLICITDAMAGETYPE, false, 0, 0, 10, "CompanionBulletPuff", "Companion");
    ARCB LMN 3 Bright;
    Stop;
  }
}

