Class Thamuz : CompanionCyberdemon
{
  Default
  {
    +FRIENDLY
    Species "Companion";
    DamageFactor "Companion", 0;
    Health 4800;
    Speed 16;
    PainChance 35;
    Mass 2000;
    Scale 1.1;
    Bloodcolor "00 AA 00";
    Monster;
    +Boss
    +NoRadiusDMG
    +FloorClip
    SeeSound "Thamuz/Idlesight";
    PainSound "Thamuz/Pain";
    DeathSound "Thamuz/death";
    ActiveSound "Thamuz/Idlesight";
    Obituary "%o fell before Thamuz.";
    DropItem "CellPack";
    DropItem "RocketBox";
    DropItem "CellPack", 128;
    DropItem "RocketBox", 128;
  }
  States
  {
    Spawn:
      DCYB A 10 A_Look;
      Loop;
    See:
      DCYB A 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostA",0,0,0,0,0,0,0,128);
      DCYB A 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostA",0,0,0,0,0,0,0,128);
      DCYB A 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostB",0,0,0,0,0,0,0,128);
      DCYB B 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostB",0,0,0,0,0,0,0,128);
      DCYB C 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostC",0,0,0,0,0,0,0,128);
      DCYB C 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostC",0,0,0,0,0,0,0,128);
      DCYB D 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostD",0,0,0,0,0,0,0,128);
      DCYB D 3 A_Chase;
      TNT1 A 0 A_SpawnItemEx("DarkCyberGhostD",0,0,0,0,0,0,0,128);
      Loop;
    Missile:
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      TNT1 A 0 A_Jump(160,6);
      DCYB AE 5 A_FaceTarget;
      DCYB E 5 A_FaceTarget;
      DCYB F 10 A_SpawnProjectile("DCBMiss1",56,-25,0);
      DCYB E 15 A_FaceTarget;
      Goto See;
      TNT1 A 0 A_Jump(160,31);
      TNT1 A 0 A_SetInvulnerable;
      DCYB G 20 A_StartSound("Apocalypse/cast");
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,20);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,40);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,60);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,80);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,100);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,120);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,140);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,160);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-20);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-40);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-60);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-80);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-100);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-120);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-140);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,-160);
      TNT1 A 0 A_SpawnProjectile("DCBMiss3",50,0,180);
      DCYB G 10 A_SpawnProjectile("DCBMiss3",50,0,0);
      DCYB GGGGGGGG 10;
      TNT1 A 0 A_UnsetInvulnerable;
      DCYB G 10;
      Goto See;
      DCYB AE 3 A_FaceTarget;
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      DCYB E 4 A_FaceTarget;
      DCYB F 4 A_SpawnProjectile("DCBMiss2",56,-25,0);
      Goto See;
    Pain:
      DCYB G 2;
      DCYB G 2 A_Pain;
      Goto See;
    Death:
      DCYB H 5;
      DCYB I 5 A_Scream;
      TNT1 A 0 A_SpawnItemEx("BDS",0,0,0,0,0,0,0,128);
      DCYB JKLMNO 5;
      DCYB P -1 A_NoBlocking;
      Stop;
  }
}

