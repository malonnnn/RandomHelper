Class EnhancedCacodemon : Actor
{
  Default
  {
    MONSTER;
    +FRIENDLY
    Species "Companion";
    DamageFactor "Companion", 0;
    Health 300;
    Speed 8;
    Radius 31;
    Height 56;
    PainChance 128;
    Mass 400;
    REACTIONTIME 8;
    +NOGRAVITY
    +FLOAT
    SeeSound "caco/sight";
    PainSound "caco/pain";
    DeathSound "caco/death";
    ActiveSound "caco/active";
    HitObituary "%o was mowed down by an enhanced cacodemon.";
    Obituary "%o was made into a snack by the enhanced cacodemon.";
  }
  States
  {
    Spawn:
      ENCD A 10 A_Look;
      Loop;
    See:
      ENCD A 3 A_Chase;
      Loop;
    Melee:
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      ENCD BC 5 A_FaceTarget;
      ENCD B 5 bright A_CustomMeleeAttack(Random(1,8)*8, "", "", "Companion");
      Goto See;
    Missile:
      TNT1 A 0 A_AlertMonsters(0, AMF_TARGETEMITTER);
      ENCD BC 5 A_FaceTarget;
      ENCD B 0 bright A_SpawnProjectile("CompanionCacodemonBall", 24, 0, 0, 1);
      ENCD B 0 bright A_SpawnProjectile("CompanionCacodemonBall", 24, 0, -8, 1);
      ENCD B 5 bright A_SpawnProjectile("CompanionCacodemonBall", 24, 0, 8, 1);
      Goto See;
    Pain:
      ENCD D 4;
      ENCD D 4 A_Pain;
      ENCD D 5;
      Goto See;
    Death:
      ENCD E 8;
      ENCD F 8 A_Scream;
      ENCD GH 8;
      ENCD I 8 A_NoBlocking;
      ENCD J -1 A_SetFloorClip;
      Stop;
    Raise:
      ENCD J 8 A_UnsetFloorClip;
      ENCD IHGFE 8;
      Goto See;
  }
}

